<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aaa.mapper.PostMapper" >
  <resultMap id="BaseResultMap" type="com.aaa.bean.Post" >
    <id column="pid" property="pid" jdbcType="INTEGER" />
    <result column="pname" property="pname" jdbcType="VARCHAR" />
    <result column="describes" property="describes" jdbcType="VARCHAR" />
    <result column="seq" property="seq" jdbcType="INTEGER" />
    <result column="deptid" property="deptid" jdbcType="INTEGER" />
  </resultMap>
  <!--  //查询职位对应的功能 List<map> postTrueVisittwomodile(Map map);-->
	<select id="postTrueVisittwomodile" parameterType="map" resultType="map">
		SELECT * FROM visittwomodile vt
			JOIN posttwomodile pt
			ON pt.mTwoid = vt.mTowid
			WHERE pt.pid = #{pid}
			<if test="mname != ''">
				AND vt.mname LIKE "%"#{mname}"%"
			</if>
  </select>
  <!--  //查询职位没有的功能  List<map> postFalseVisittwomodile(Map map); -->
	<select id="postFalseVisittwomodile" parameterType="map" resultType="map">
		SELECT * FROM visittwomodile vtm
			WHERE vtm.mTowid NOT IN(
				SELECT vt.mTowid FROM visittwomodile vt
				JOIN posttwomodile pt
				ON pt.mTwoid = vt.mTowid
				WHERE pt.pid = #{pid}
				)
			<if test="mname != ''">
				AND vtm.mname LIKE "%"#{mname}"%"
			</if>
  </select>
   <!--int InsertpostVisittwomodile(Map map);  -->
  <insert id="insertpostVisittwomodile" parameterType="map">
  	INSERT INTO posttwomodile VALUES(#{pid}, #{mTwoid})
  </insert>
  
  <!--int delpostVisittwomodile(Map map);  -->
  <delete id="delpostVisittwomodile" parameterType="map">
	DELETE FROM posttwomodile WHERE pid = #{pid} AND mTwoid = #{mTwoid}
  </delete>
 
  <!-- List<Post> getAllPost(Integer deptId); -->
  <select id="getAllPost" resultMap="BaseResultMap" parameterType="integer">
  	SELECT * FROM post
		<where>
			<if test="deptId != null">
			   deptid=#{deptId}
			</if>
		</where>
  </select>
  <sql id="Base_Column_List" >
    pid, pname, describes, seq, deptid
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from post
    where pid = #{pid,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from post
    where pid = #{pid,jdbcType=INTEGER}
  </delete>
  <insert id="insert" parameterType="com.aaa.bean.Post" >
    insert into post (pid, pname, describes, 
      seq, deptid)
    values (#{pid,jdbcType=INTEGER}, #{pname,jdbcType=VARCHAR}, #{describes,jdbcType=VARCHAR}, 
      #{seq,jdbcType=INTEGER}, #{deptid,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.aaa.bean.Post" >
    insert into post
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="pid != null" >
        pid,
      </if>
      <if test="pname != null" >
        pname,
      </if>
      <if test="describes != null" >
        describes,
      </if>
      <if test="seq != null" >
        seq,
      </if>
      <if test="deptid != null" >
        deptid,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="pid != null" >
        #{pid,jdbcType=INTEGER},
      </if>
      <if test="pname != null" >
        #{pname,jdbcType=VARCHAR},
      </if>
      <if test="describes != null" >
        #{describes,jdbcType=VARCHAR},
      </if>
      <if test="seq != null" >
        #{seq,jdbcType=INTEGER},
      </if>
      <if test="deptid != null" >
        #{deptid,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.aaa.bean.Post" >
    update post
    <set >
      <if test="pname != null" >
        pname = #{pname,jdbcType=VARCHAR},
      </if>
      <if test="describes != null" >
        describes = #{describes,jdbcType=VARCHAR},
      </if>
      <if test="seq != null" >
        seq = #{seq,jdbcType=INTEGER},
      </if>
      <if test="deptid != null" >
        deptid = #{deptid,jdbcType=INTEGER},
      </if>
    </set>
    where pid = #{pid,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.aaa.bean.Post" >
    update post
    set pname = #{pname,jdbcType=VARCHAR},
      describes = #{describes,jdbcType=VARCHAR},
      seq = #{seq,jdbcType=INTEGER},
      deptid = #{deptid,jdbcType=INTEGER}
    where pid = #{pid,jdbcType=INTEGER}
  </update>
</mapper>